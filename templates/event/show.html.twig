{% extends 'base.html.twig' %} {% block title %}Event{% endblock %} {% block
body %}
<h1>Event</h1>

<div class="container">
  <div class="card" style="width: 18rem">
    <div class="card-body">
      <img
        src="{{ asset('uploads/' ~ event.picture) }}"
        class="card-img-top"
        alt="..."
      />

      <h5 class="card-title">{{ event.name }}</h5>
      <p class="card-text">
        Date Time:
        {{ event.dateTime ? event.dateTime|date('Y-m-d H:i:s') : '' }}
      </p>
      <p class="card-text">Description: {{ event.description }}</p>
      <p class="card-text">Capacity: {{ event.capacity }}</p>
      <p class="card-text">Contact Email: {{ event.contactEmail }}</p>
      <p class="card-text">Contact Number: {{ event.contactNumber }}</p>
      <p class="card-text">Address: {{ event.address }}</p>
      <p class="card-text">Event URL: {{ event.url }}</p>
      <p class="card-text">Event Type: {{ event.type }}</p>
      <a href="{{ path('app_event_index') }}" class="btn btn-success"
        >Back to List</a
      >
      <a
        href="{{ path('app_event_edit', { id: event.id }) }}"
        class="btn btn-warning"
        >Edit</a
      >
      {{ include("event/_delete_form.html.twig") }}
    </div>
  </div>
</div>
{% endblock %}
